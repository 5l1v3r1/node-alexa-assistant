{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "removeComments": true,
        "esModuleInterop": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "dist/"
    },
    "typeRoots": [
        "node_modules/@types"
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
}